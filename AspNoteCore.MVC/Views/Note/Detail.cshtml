@*@model AspNoteCore.MVC.Models.Note*@

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-item">Note Details</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-10">
        <div class="card">
            <div class="card-header">
                <label>Title: </label><b>@Model.NoteTitle</b>
            </div>
            <div class="card-body">
                @Html.Raw(Model.NoteContents)
            </div>
            <div class="card-footer text-right">
                <a class="btn btn-primary" asp-controller="Note" asp-action="List">List</a>
            </div>
        </div>
    </div>
</div>

